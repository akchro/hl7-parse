# FastAPI HL7 LiteBoard Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://hl7user:hl7password@localhost:5432/hl7_liteboard

# Application Settings
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:5173", "http://localhost:8080"]
ALLOWED_HOSTS=["*"]

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads
SAMPLE_FILES_DIR=sample_files

# AI/Mastra Configuration
GOOGLE_API_KEY=your-google-api-key-here
MASTRA_ENDPOINT=http://localhost:3001

# Processing Configuration
MAX_CONCURRENT_PROCESSES=5
PROCESS_TIMEOUT=300  # 5 minutes in seconds

# Logging
LOG_LEVEL=INFO