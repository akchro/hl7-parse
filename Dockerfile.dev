# Development Dockerfile for Frontend
FROM node:20-alpine

WORKDIR /app

# Install development dependencies
RUN apk add --no-cache git curl

# Copy package files
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Expose Vite dev server port
EXPOSE 5173

# Start development server with hot reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]