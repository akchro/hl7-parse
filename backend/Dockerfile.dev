# Development Dockerfile for Backend
FROM node:20-alpine

WORKDIR /app

# Install development dependencies and debugging tools
RUN apk add --no-cache python3 make g++ curl

# Install nodemon globally for development
RUN npm install -g nodemon

# Copy package files
COPY package*.json ./
RUN npm install

# Copy source code
COPY . .

# Create uploads directory
RUN mkdir -p uploads logs

# Expose ports (3001 for API, 9229 for debugging)
EXPOSE 3001 9229

# Start development server with debugging enabled
CMD ["nodemon", "--inspect=0.0.0.0:9229", "server.js"]